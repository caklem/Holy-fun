<style>
	.services {
		padding: 100px 0;
		background: white;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.section-header {
		text-align: center;
		margin-bottom: 60px;
	}

	.section-header h2 {
		font-size: 2.5rem;
		color: #2c3e50;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.section-header p {
		font-size: 1.2rem;
		color: #666;
		max-width: 600px;
		margin: 0 auto;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 40px;
	}

	.service-card {
		text-align: center;
		padding: 40px 30px;
		border-radius: 20px;
		background: #f8f9fa;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.service-card:hover {
		transform: translateY(-10px);
		background: white;
		border-color: #667eea;
		box-shadow: 0 20px 40px rgba(102, 126, 234, 0.1);
	}

	.service-icon {
		font-size: 3rem;
		margin-bottom: 20px;
		display: block;
	}

	.service-card h3 {
		font-size: 1.5rem;
		color: #2c3e50;
		margin-bottom: 15px;
		font-weight: 600;
	}

	.service-card p {
		color: #666;
		line-height: 1.6;
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.services-grid {
			grid-template-columns: 1fr;
		}
		
		.section-header h2 {
			font-size: 2rem;
		}
		
		.service-card {
			padding: 30px 20px;
		}
	}
</style>
