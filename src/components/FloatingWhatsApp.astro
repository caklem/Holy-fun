		7: "Promo Spesial Agustusan! üéâ", // Agustus
		8: "Promo Back to School! üìö", // September
		9: "Promo Halloween! üéÉ", // Oktober
		10: "Promo Thanksgiving! ü¶É", // November
		11: "Promo Natal & Tahun Baru! üéÑ" // Desember
	};
	
	const currentMonth = new Date().getMonth();
