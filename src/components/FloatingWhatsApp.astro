// Fungsi untuk mendapatkan promo sesuai bulan
function getMonthlyPromo() {
	const monthPromos: Record<number, string> = {
		0: "Promo Tahun Baru! üéä", // Januari
		1: "Promo Valentine! üíï", // Februari  
		2: "Promo Spring Break! üå∏", // Maret
