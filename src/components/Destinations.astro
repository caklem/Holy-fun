<script>
document.addEventListener('DOMContentLoaded', function() {
	// Ambil semua dropdown pax selector
	const paxDropdowns = document.querySelectorAll('.pax-dropdown');
	
	// Admin WhatsApp numbers
	const admin1Number = '6285936645589';
	const admin2Number = '6289653750433';
	
	// Fungsi untuk membuat URL WhatsApp
	function createWhatsAppURL(phoneNumber, message) {
		const encodedMessage = encodeURIComponent(message);
		return `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
	}
	
	// Fungsi untuk membuat pesan WhatsApp yang dipersonalisasi
	function createPersonalizedMessage(destinationName, selectedPax, selectedPrice) {
		return `Halo Admin! üëã

Saya tertarik untuk booking paket wisata:
üèñÔ∏è *${destinationName}*
üë• Jumlah Peserta: *${selectedPax}*
üí∞ Harga: *${selectedPrice}*

Mohon informasi lebih lanjut untuk proses booking. Terima kasih! üôè`;
	}
	
	// Event listener untuk setiap dropdown
	paxDropdowns.forEach(dropdown => {
		dropdown.addEventListener('change', function() {
			const destinationId = this.dataset.destinationId;
			const selectedOption = this.options[this.selectedIndex];
			
			// Elemen untuk menampilkan harga terpilih
			const priceDisplay = document.querySelector(`.selected-price[data-destination-id="${destinationId}"]`);
			
			// Tombol admin untuk destination ini
			const adminButtons = document.querySelectorAll(`button[data-destination-id="${destinationId}"]`);
			
			if (selectedOption.value === '') {
				// Jika tidak ada yang dipilih
				priceDisplay.textContent = 'Pilih jumlah pax';
				priceDisplay.classList.add('empty');
				
				// Disable tombol admin
				adminButtons.forEach(btn => {
					btn.disabled = true;
					btn.onclick = null;
				});
			} else {
				// Jika ada yang dipilih
				const selectedPax = selectedOption.dataset.pax;
				const selectedPrice = selectedOption.dataset.price;
				
				// Update display harga
				priceDisplay.textContent = `${selectedPax} - ${selectedPrice}`;
				priceDisplay.classList.remove('empty');
				
				// Ambil nama destinasi dari card
				const destinationCard = dropdown.closest('.destination-card');
				const destinationName = destinationCard.querySelector('h3').textContent;
				
				// Buat pesan yang dipersonalisasi
				const personalizedMessage = createPersonalizedMessage(destinationName, selectedPax, selectedPrice);
				
				// Enable dan setup tombol admin
				adminButtons.forEach(btn => {
					btn.disabled = false;
					
					const adminNumber = btn.dataset.admin === '1' ? admin1Number : admin2Number;
					const whatsappURL = createWhatsAppURL(adminNumber, personalizedMessage);
					
					btn.onclick = function() {
						window.open(whatsappURL, '_blank', 'noopener,noreferrer');
					};
				});
			}
		});
	});
});
</script>

