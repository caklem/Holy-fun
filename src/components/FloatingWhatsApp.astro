	// Client-side script untuk update promo secara dinamis
	function updateMonthlyPromo() {
		const monthPromos = [
			"Promo Tahun Baru! üéä", // Januari (0)
			"Promo Valentine! üíï", // Februari (1)
			"Promo Spring Break! üå∏", // Maret (2)
			"Promo Easter Holiday! üê∞", // April (3)
			"Promo Labor Day! üå∫", // Mei (4)
